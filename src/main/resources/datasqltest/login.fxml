<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="datasqltest.loginController">
    <children>
      <ImageView fitHeight="600.0" fitWidth="800.0">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="135.0" fitWidth="149.0">
         <image>
            <Image url="@LogoMicrochip_-_Copy-removebg-preview.png" />
         </image>
      </ImageView>
        <Button fx:id="loginButton" layoutX="372.0" layoutY="451.0" mnemonicParsing="false" onAction="#loginButtonOnAction" text="login">
         <effect>
            <DropShadow color="RED" />
         </effect></Button>
        <PasswordField fx:id="password" layoutX="319.0" layoutY="349.0" promptText="password">
         <effect>
            <DropShadow color="RED" />
         </effect></PasswordField>
        <TextField fx:id="username" layoutX="319.0" layoutY="288.0" promptText="username">
         <effect>
            <DropShadow color="RED" />
         </effect></TextField>
        <Label layoutX="701.0" layoutY="25.0" text="Login">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <Label fx:id="error" layoutX="383.0" layoutY="374.0" />
    </children>
</AnchorPane>
